# ============================================
# Teqwa Backend - Production Environment Variables
# ============================================
# Copy this file to .env for production deployment
# cp .env.production.example .env
# 
# IMPORTANT: Fill in ALL values before deploying to production
# ============================================

# Django Core Settings (REQUIRED)
SECRET_KEY=REPLACE-WITH-RANDOM-SECRET-KEY-GENERATE-USING-PYTHON-COMMAND
DEBUG=0
ALLOWED_HOSTS=api.yourdomain.com,yourdomain.com,www.yourdomain.com

# Database (REQUIRED)
# Use DATABASE_URL for production (recommended)
DATABASE_URL=postgresql://teqwa_user:REPLACE-WITH-SECURE-PASSWORD@db-host:5432/teqwa_db

# OR use individual settings:
# DB_NAME=teqwa_db
# DB_USER=teqwa_user
# DB_PASSWORD=REPLACE-WITH-SECURE-PASSWORD
# DB_HOST=your-db-host
# DB_PORT=5432

# Frontend & CORS (REQUIRED)
FRONTEND_URL=https://yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (REQUIRED for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=REPLACE-WITH-APP-PASSWORD-OR-API-KEY
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AWS S3 (OPTIONAL - for media files)
# Leave empty if not using S3
AWS_ACCESS_KEY_ID=REPLACE-WITH-AWS-ACCESS-KEY
AWS_SECRET_ACCESS_KEY=REPLACE-WITH-AWS-SECRET-KEY
AWS_STORAGE_BUCKET_NAME=teqwa-media-bucket
AWS_S3_REGION_NAME=us-east-1

# Payment Gateway (REQUIRED if using payments)
CHAPA_SECRET_KEY=REPLACE-WITH-CHAPA-SECRET-KEY
CHAPA_WEBHOOK_SECRET=
WEBHOOK_URL=https://api.yourdomain.com

# HTTPS Security
SECURE_SSL_REDIRECT=True
USE_TLS=True
