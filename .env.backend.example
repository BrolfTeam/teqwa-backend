# ============================================
# Teqwa Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env
# ============================================

# ============================================
# DJANGO CORE SETTINGS
# ============================================

# Django Secret Key (REQUIRED IN PRODUCTION)
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-in-production-use-random-string

# Debug Mode (REQUIRED)
# Set to 0 or False in production, 1 or True for development
DEBUG=1

# Allowed Hosts (REQUIRED IN PRODUCTION)
# Comma-separated list of domains that can host this site
# For development: localhost,127.0.0.1,0.0.0.0,*
# For production: yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Choose one method: DATABASE_URL (recommended) OR individual DB_* variables

# Option 1: PostgreSQL Database URL (Recommended for production)
# Format: postgresql://user:password@host:port/dbname
# DATABASE_URL=postgresql://teqwa_user:your-password@localhost:5432/teqwa_db

# Option 2: Individual Database Settings (For development)
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=Teqwa123
DB_HOST=localhost
DB_PORT=5432

# ============================================
# FRONTEND & CORS CONFIGURATION
# ============================================

# Frontend URL (REQUIRED)
# Used for email links and CORS configuration
# Development: http://localhost:5173
# Production: https://yourdomain.com
FRONTEND_URL=http://localhost:5173

# CORS Allowed Origins (REQUIRED IN PRODUCTION)
# Comma-separated list of frontend URLs that can access the API
# Development: http://localhost:5173,http://127.0.0.1:5173
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Email backend options:
# - django.core.mail.backends.console.EmailBackend (prints to console - development)
# - django.core.mail.backends.smtp.EmailBackend (SMTP - production)

# Email Backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (if using SMTP backend)
# For Gmail: smtp.gmail.com
# For SendGrid: smtp.sendgrid.net
# For Mailgun: smtp.mailgun.org
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-or-api-key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# AWS S3 CONFIGURATION (OPTIONAL - FOR PRODUCTION MEDIA FILES)
# ============================================
# Leave empty if using local media storage in production
# Required if using S3 for media files in production

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
# Optional: Custom S3 endpoint URL (for S3-compatible services)
AWS_S3_ENDPOINT_URL=

# ============================================
# PAYMENT GATEWAY (CHAPA)
# ============================================

# Chapa Secret Key (REQUIRED for payment functionality)
# Get from: https://dashboard.chapa.co/settings/developers
CHAPA_SECRET_KEY=your-chapa-secret-key-here

# Chapa Webhook Secret (OPTIONAL - for webhook verification)
CHAPA_WEBHOOK_SECRET=

# Webhook URL (REQUIRED if using webhooks)
# This should be your backend API URL: https://api.yourdomain.com
WEBHOOK_URL=

# ============================================
# HTTPS & SECURITY SETTINGS (PRODUCTION ONLY)
# ============================================
# These are only used when DEBUG=False

# Force HTTPS redirects (True/False)
SECURE_SSL_REDIRECT=True

# Use TLS behind proxy (True/False)
USE_TLS=True

# ============================================
# DJANGO SUPERUSER (AUTO-CREATION)
# ============================================
# Used by docker-entrypoint.py to create superuser automatically

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@teqwa.com
DJANGO_SUPERUSER_PASSWORD=Teqwa@Admin2024

# ============================================
# DOCKER / PLATFORM SETTINGS
# ============================================

# Port (automatically set by Docker/Platform, override if needed)
PORT=8000

# ============================================
# NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. Use strong, random SECRET_KEY in production
# 3. Set DEBUG=0 in production
# 4. Configure proper ALLOWED_HOSTS in production
# 5. Use HTTPS URLs in production (FRONTEND_URL, CORS_ALLOWED_ORIGINS)
# 6. Use environment-specific email backends (console for dev, SMTP for prod)
# 7. Secure your database credentials
# 8. Keep CHAPA_SECRET_KEY secret
